!#/bin/bash

output_dir="pokemon_data"
mkdir -p "$output_dir"

error_log="errors.txt"
> "$error_log"

pokemon_list=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

fetch_pokemon() {
  local pokemon="$1"

  if curl -s -f -o "$output_dir/$pokemon.json" "https://pokeapi.co/api/v2/pokemon/$pokemon"; then
    echo "Saved data to $output_dir/$pokemon.json"
  else
    echo "Failed to fetch data for $pokemon" >> "$error_log"
  fi
}


echo "Fetching PokÃ©mon data in parallel..."

for pokemon in "${pokemon_list[@]}"; do
  echo "Fetching data for $pokemon..."
  fetch_pokemon "$pokemon" &
done

echo ""
echo " Current background jobs:"
jobs


sleep 15
for job in $(jobs -p); do
  if kill -0 "$job" 2>/dev/null; then
    echo "Job $job is still running"
    kill "$job"
  fi
done

wait

echo ""
echo "Parallel fetch completed"
echo " Data saved in $output_dir"
echo " Errors (if any) are saved in $error_log"
